{
    "name": "prestasafe-smarty-components/core",
    "description": "Système de composants Smarty inspiré de Vue.js avec AlpineJS, compatible avec PrestaShop",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Author",
            "email": "info@example.com"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "smarty/smarty": "^3.1|^4.3",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "SmartyComponents\\": "src/"
        }
    },
    "suggest": {
        "prestashop/prestashop": "For integration with PrestaShop e-commerce platform"
    },
    "minimum-stability": "stable",
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
} 